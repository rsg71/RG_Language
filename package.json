{
  "name": "rglanguage",
  "version": "1.0.0",
  "description": "RG Language",
  "main": "index.ts",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node dist/index.js",
    "start:dev": "set NODE_ENV=dev&& concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "test": "set NODE_ENV=test && jest",
    "test:watch": "jest --watch",
    "test:e2e": "set NODE_ENV=test && mocha --require ts-node/register tests/**/*.ts",
    "test:coverage": "npx jest --coverage",
    "client": "cd client && npm run start",
    "seed": "node dist/scripts/seedDB.js",
    "seed:spanish": "node dist/scripts/seedSpanish.js",
    "install": "cd client && npm install",
    "postinstall": "tsc",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npx tsc && npm run build",
    "ts-build": "npx tsc",
    "start-backend:dev": "set NODE_ENV=dev&& nodemon index.ts | pino-pretty --levelFirst",
    "start-app-typescript:prod": "node dist/index.js"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/chai": "^4.3.4",
    "@types/chai-http": "^4.2.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.5",
    "@types/jest": "^29.5.5",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/node": "^18.6.1",
    "@types/passport": "^1.0.9",
    "@types/supertest": "^2.0.13",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "chai": "^3.5.0",
    "chai-http": "^2.0.1",
    "concurrently": "^4.1.0",
    "jest": "^29.7.0",
    "nodemon": "^1.18.7",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tslint": "^6.1.3",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.16.3",
    "express-session": "^1.17.3",
    "if-env": "^1.0.4",
    "joi": "^17.10.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^5.11.15",
    "passport": "^0.6.0",
    "passport-local": "^1.0.0",
    "pino": "^8.15.1",
    "pino-pretty": "^9.0.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0"
  }
}
